#!/usr/bin/env perl

use strict;
use warnings;
use 5.014;
use Date::Format qw(time2str);
use Encode qw(decode encode);
use Storable qw(nstore retrieve);
use WWW::Mechanize;

our $VERSION = '0.0';

my $now = time;
my $www = WWW::Mechanize->new;
my $outfile = $ARGV[0] // '/dev/stdout';
my $db_file = 'linktrack_db';
my %db;

sub load_db {
	if (-e $db_file) {
		my $db = retrieve($db_file);
		%db = %{$db};
	}
}

sub save_db {
	nstore(\%db, $db_file);
}

sub grab_links {
	my ($lecture, $url) = @_;

	$db{sites}{$lecture} = $url;

	$www->get($url);

	for my $link ($www->links) {
		my $url = $link->url_abs->abs;
		my $text = decode('iso-8859-15', $link->text);

		if (not defined $text or $text eq q{}) {
			next;
		}

		$db{entries}{$now}{$lecture}{$url} = $text;

	}
}

load_db;

open(my $fh, '<', 'sites');
for my $line (<$fh>) {
	chomp $line;
	my ($name, $url) = split(/ /, $line);
	grab_links($name, $url);
}

save_db;

__END__

